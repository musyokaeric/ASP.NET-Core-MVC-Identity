@model ExternalLoginConfirmationViewModel

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Register</h1>

    <p class="text-primary text-center pt-2">Associate your @ViewData["ProviderDisplayName"] account.</p>

    <form method="post" asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnUrl="@ViewData["ReturnUrl"]">
        <input asp-for="Email" hidden />
        <div class="border p-2 rounded">
            <p>
                You've successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>.
                Please enter a user name for this site below and click register to finish logging in.
            </p>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">Register</button>
                </div>
            </div>
        </div>
    </form>
</div>

@* Client-side validation *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
